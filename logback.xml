<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./logs/spring.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d %p %c{1.} [%t] %m%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>

</configuration>